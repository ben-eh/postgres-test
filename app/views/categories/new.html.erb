<div class="container">
  <div class="header">
    <div class="header_item" style="margin-left: 2%">
      <%= link_to "Back to Start", root_path %>
    </div>
    <div class="header_item">
      <h1>Add New Category</h1>
    </div>
    <div class="header_item" style="margin-right: 2%">
      <%= link_to "Add a New Link", new_link_path %>
    </div>
  </div>

  <div class="content_div">
    <div class="content">
      <%= render 'form' %>

      <h2>Existing Categories</h2>

      <ul>
        <% @categories.each do |category| %>
        <li>
          <%= category.name %>
          <%= link_to "Edit", edit_category_path(category.id) %>
        </li>
        <% end %>
      </ul>
      </div>
    </div>
  </div>
</div>
